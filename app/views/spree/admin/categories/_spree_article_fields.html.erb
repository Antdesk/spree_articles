<div class="fields">
    <%= f.label :title, Spree.t("articles_content.title") %> <span class="required">*</span>
    <%= link_to_remove_fields Spree.t("articles_content.remove_article"), f %><br />
    <%= f.text_field :title, :class => 'fullwidth title' %>


    <%= f.label :content, Spree.t("articles_content.content") %><span class="required">*</span><br />
    <%= f.text_area :content, {:class => 'fullwidth'} %>

    <%= f.label :visible, Spree.t("articles_content.visible") %>
    <%= f.check_box :visible %>

</div>