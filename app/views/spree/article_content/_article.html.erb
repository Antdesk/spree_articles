<tr class="<%= cycle('odd', 'even') %>" id="<%= dom_id article %>">
  <td>
    <%= article.title %>
  </td>
  <td class="align-center">
    <%= content_tag(:i, '', :class => 'icon-ok green') if article.visible %>
  </td>
  <td  class="actions">
    <%= link_to_edit article, :no_text => true %>
    <%= link_to_delete article, :no_text => true %>
  </td>
</tr>